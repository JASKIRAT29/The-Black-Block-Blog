<section>
    <h2>Create New Post</h2><br>

    <form class="new-post-form">
        <div>
            <label for="post-title">Post Title</label>
            <input class="form-control" type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-text">Post Content</label>
            <textarea class="form-control" id="post-text" name="post-text"></textarea>
        </div>
        <button type="submit" class="btn comment">Create your Post</button>
    </form>
</section>
{{#if posts.length}}
<section>
    <br>
    <h3>Your Posts</h3>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/js/add-post.js"></script>